generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


enum OrderStatus {
  fulfilled
  shipped
  awaiting_shipment
}

enum TeeMaterial {
  cotton
  linen
}

enum TeeFinish {
 smooth 
 textured
}
enum TeeColor {
  white
  black
  yellow
  rose

}
model Configuration{
  
  id              String   @id @default(cuid())
  width           Int
  height          Int
  imageUrl        String
  material        TeeMaterial?
  color           TeeColor?
  finish          TeeFinish?
  croppedImageUrl String?

}